{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@tests/*": [ "src/__tests__/*" ],
      "@index": [ "src/index.ts" ],
      "@db/*": [ "src/db/*" ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
